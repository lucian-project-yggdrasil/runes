{
	"name": "@lucian/runes",
	"version": "1.0.0",
	"type": "module",
	"packageManager": "pnpm@10.25.0",
	"exports": {
		".": {
			"import": "./dist/core/index.js",
			"types": "./dist/core/index.d.ts"
		}
